<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javahelps.hilal2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hilal2">
        <activity
            android:name=".Form"
            android:label="@string/title_activity_form"
            android:theme="@style/Theme.Hilal2.NoActionBar" /> <!-- Login -->
        <activity
            android:name=".Event"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Register -->
        <activity
            android:name=".Register"
            android:theme="@style/Theme.Design.Light.NoActionBar" /> <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" /> <!-- MoonPhase -->
        <activity
            android:name=".MoonPhase"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".Calendar"
            android:theme="@style/Theme.Design.Light.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>